<div class="container my-3">
  <div class="row">
    <div class="col">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit class: 'btn btn-primary' %><%= link_to "Cancel", new_doses_path(@cocktail), class: 'btn btn-primary ml-3' %>

      <% end %>
    </div>
  </div>
</div>
